<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name> shopcart </display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    
    
   
  </welcome-file-list>
  
  <servlet>
  <servlet-name>shopping login</servlet-name>
  <servlet-class>com.servlets.LoginServlets</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>shopping login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>shoppinghelp</servlet-name>
  <servlet-class>com.servlets.HelpServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>shoppinghelp</servlet-name>
  <url-pattern>/help</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>shoping cart</servlet-name>
  <servlet-class>com.servlets.CartServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>shoping cart</servlet-name>
  <url-pattern>/cart</url-pattern>
  </servlet-mapping>  
  
  
  <servlet>
  <servlet-name>shopping checkout</servlet-name>
  <servlet-class>com.servlets.CheckoutServlet</servlet-class>
  </servlet>
  
	<servlet-mapping>
	  <servlet-name>shopping checkout</servlet-name>
	  <url-pattern>/checkout</url-pattern>
	</servlet-mapping>
</web-app>